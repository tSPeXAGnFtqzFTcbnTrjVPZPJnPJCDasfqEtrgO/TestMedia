<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_disc">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/disc"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_disc"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txtv_name"
        android:text="aaaaaaagg"
        android:textSize="30sp"
        android:gravity="center"
        android:paddingLeft="10dp"

        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/disc"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/txtv_artist"
        android:text="aaaaaaaaaa"
        android:gravity="center"
        android:paddingLeft="10dp"

        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"

        android:layout_marginTop="@dimen/margin_item"
        app:layout_constraintTop_toBottomOf="@id/txtv_name"
        app:layout_constraintLeft_toLeftOf="parent"/>
