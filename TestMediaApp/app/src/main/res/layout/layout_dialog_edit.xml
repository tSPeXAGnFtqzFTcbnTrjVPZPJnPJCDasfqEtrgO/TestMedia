<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtv_name"
        android:text="Title"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_name"
        app:layout_constraintBottom_toTopOf="@id/txtv_artist"/>
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="true"
        app:layout_constraintHorizontal_weight="7"
        app:layout_constraintTop_toTopOf="@id/txtv_name"
        app:layout_constraintBottom_toBottomOf="@id/txtv_name"
        app:layout_constraintLeft_toRightOf="@id/txtv_name"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/txtv_artist"
        android:text="Artist"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintTop_toBottomOf="@id/txtv_name"
        app:layout_constraintBottom_toTopOf="@id/txtv_album"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_artist"/>
    <EditText
        android:id="@+id/edit_artist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="true"
        app:layout_constraintHorizontal_weight="7"
        app:layout_constraintTop_toTopOf="@id/txtv_artist"
        app:layout_constraintBottom_toBottomOf="@id/txtv_artist"
        app:layout_constraintLeft_toRightOf="@id/txtv_artist"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/txtv_album"
        android:text="Album"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintTop_toBottomOf="@id/txtv_artist"
        app:layout_constraintBottom_toTopOf="@id/btn_ok"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_album"/>
    <EditText
        android:id="@+id/edit_album"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="true"
        app:layout_constraintHorizontal_weight="7"
        app:layout_constraintTop_toTopOf="@id/txtv_album"
        app:layout_constraintBottom_toBottomOf="@id/txtv_album"
        app:layout_constraintLeft_toRightOf="@id/txtv_album"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_ok"
        android:text="Ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@id/txtv_album"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_cancel"/>
    <Button
        android:id="@+id/btn_cancel"
        android:text="Cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintTop_toTopOf="@id/btn_ok"
        app:layout_constraintBottom_toBottomOf="@id/btn_ok"
        app:layout_constraintLeft_toRightOf="@id/btn_ok"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>